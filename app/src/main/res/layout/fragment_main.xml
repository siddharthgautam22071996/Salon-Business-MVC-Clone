<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/ht"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTimeTab">


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorDateTab"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />


                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TabLayout>


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tabLayout"
                android:background="@color/colorTimeTab"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 Am" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 Am" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 Am" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:00 Pm" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 Pm" />

            </android.support.design.widget.TabLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorOrange"
                android:text="BOOK NOW"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/button2"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tabLayout1"
                android:layout_marginTop="500dp"
                android:background="@color/colorOrange"
                android:text="BILL NOW"
                android:textColor="@color/colorPrimary" />


            <RelativeLayout
                android:id="@+id/rtl1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tabLayout1"
                android:background="@color/colorPrimary"
                android:gravity="center">

                <ImageView
                    android:id="@+id/im_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/im_1"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/im_2"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/im_3"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/im_4"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/im_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_6"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_7"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_8"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_9"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/im_6"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_11"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_12"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_14"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_9"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_13"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/im_15"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/im_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/im_14"
                    android:src="@drawable/ic_launcher" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/rtl1"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/im_bt1"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_bt2"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/im_bt1"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:id="@+id/im_bt3"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/im_bt2"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_launcher" />


                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/im_bt3"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_launcher" />


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
