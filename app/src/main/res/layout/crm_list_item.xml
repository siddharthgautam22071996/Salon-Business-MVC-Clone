<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_12sdp"
            android:paddingLeft="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/profile_image"
                    android:src="@drawable/dummy_profile"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:fontFamily="roboto-regular"
                        android:text="abhishek agarwal"
                        android:inputType="textCapWords"
                        android:capitalize="words"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp" />


                    <!--<TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="(Online Booking)"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_10sdp" />-->

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:background="@color/colorGrey25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_mail"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text=""
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:id="@+id/tv_email"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/_12sdp"
                     />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_phone"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text=""
                    android:paddingBottom="@dimen/_4sdp"
                    android:id="@+id/crmlist_mobileNo_"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/_12sdp"
                    />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey25" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/rl_editProfile"
            android:padding="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="@dimen/_15sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Edit Profile"
                        android:gravity="right"
                        android:paddingRight="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:text="20%"
                        android:gravity="right"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:id="@+id/tv_profile"
                        android:textColor="@color/colorOrange"
                        android:layout_height="wrap_content"
                        />



                </LinearLayout>


                <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:progress="50"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/prog_profile"
                android:progressDrawable="@drawable/processing_bg"
                android:layout_height="3dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:src="@drawable/rectangle4"
                android:rotation="180"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_4sdp"
                android:layout_height="@dimen/_20sdp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:visibility="gone"
            android:id="@+id/ll"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center|center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="Previous Balance"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_bill_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Rs. 200"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>