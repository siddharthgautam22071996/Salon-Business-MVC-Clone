<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/_16sdp"
          android:textStyle="bold"
          android:textColor="@color/colorBlue4"
          android:text="@string/po1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:text="@string/select_po" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/layout_bg8"
        android:padding="@dimen/_6sdp">

        <Spinner
            android:id="@+id/expense_select_po"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"

            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/tv_po_balance"
                android:gravity="left"
                android:padding="@dimen/_4sdp"
                android:text="@string/poAmount"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_po_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:text="Rs. 00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/tv_amount_balance"

                android:padding="@dimen/_4sdp"
                android:text="@string/balanceAmount"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_amount_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:text="Rs. 00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/layout_bg10"
        android:hint="@string/paidAmount"
        android:maxLength="6"
        android:inputType="number"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/et_poAmount"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_10sdp"
        />

        <TextView
            android:id="@+id/tv_response"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:gravity="center_vertical"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_po_submit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg13"
        android:padding="@dimen/_6sdp"
        android:text="@string/submit"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_10sdp" />
    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>