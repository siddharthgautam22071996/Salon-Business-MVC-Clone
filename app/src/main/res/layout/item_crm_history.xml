<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="@dimen/_6sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:weightSum="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:padding="@dimen/_12sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Mon, Apr 04, 10:30 AM"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp" />



                <TextView
                    android:padding="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="Service Id : 12240"
                    android:paddingBottom="@dimen/_4sdp"
                    android:id="@+id/tv_servicId"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/colorWhite"
                    android:divider="@null"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />




                <!-- -->



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@mipmap/rst"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:padding="@dimen/_4sdp"
                    android:id="@+id/tv_bill_amount"
                    android:textStyle="bold"
                    android:text="234"/>
            </LinearLayout>
            <com.stfalcon.multiimageview.MultiImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:id="@+id/profile_image"
                android:src="@drawable/dummy_profile"
                />



            <TextView
                android:id="@+id/tv_StaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text=" Agarwal"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey25" />

</android.support.v7.widget.CardView>