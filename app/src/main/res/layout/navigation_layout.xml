        android:onClick="onClick_profile"
        android:id="@+id/rel_profile"
        android:orientation="vertical"
        android:background="@drawable/ic_navigation_top"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">
        <RelativeLayout
            android:id="@+id/user_image"
            android:background="@drawable/white_circle"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_30sdp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_img_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:src="@drawable/image_navigation"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/app_background"
                app:civ_border_width="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right_image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_10sdp">
            <include layout="@layout/gradient_right_arrow_layout"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/user_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_image"
            android:layout_toRightOf="@+id/user_image"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
