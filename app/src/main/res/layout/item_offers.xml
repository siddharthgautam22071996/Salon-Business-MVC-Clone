<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_margin="@dimen/_2sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_4sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:text="sdfgtdygr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@android:drawable/ic_menu_share"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/send"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:src="@drawable/ic_edit_menu"
                android:layout_alignParentRight="true"
                android:id="@+id/editMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:padding="@dimen/_4sdp"
                android:visibility="gone"
                android:tint="@color/colorBlue5"
                android:src="@android:drawable/ic_menu_send"
                android:layout_alignParentRight="true"
                android:id="@+id/sendDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:id="@+id/mini"
            android:padding="@dimen/_2sdp"
            android:text="minimum billing: 200 Rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/startDate"
            android:padding="@dimen/_2sdp"
            android:text="start date : 08/09/2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/endDate"
            android:padding="@dimen/_2sdp"
            android:text="end date : 08/09/2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="end|bottom"
                    android:padding="@dimen/_1sdp"
                    android:text="Price"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_8sdp" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="start|center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="Rs. 200"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Code"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/offer1"/>-->

</android.support.v7.widget.CardView>