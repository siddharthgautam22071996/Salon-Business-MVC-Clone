<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/textScrollView"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="5dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Vender Name"
                android:id="@+id/et_advanceAmount"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Code"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Tin/Registration No."
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Pan No."
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Contact"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Phone"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Email"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="Delivery Mode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/layout_bg8"
                    >

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinner_deliveryMode"
                        android:entries="@array/delivery_mode"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Agent Name"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Agent No."
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="Payment Mode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/layout_bg8"
                    >

                    <Spinner
                       android:entries="@array/mode_of_payment_array"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_paymentMode"
                        />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Address 1"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Address 2"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="State" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/layout_bg8"
                    >

                    <Spinner
                        android:id="@+id/spinner_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="City" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/layout_bg8"
                    >

                    <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="Location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/layout_bg8"
                    >

                    <Spinner
                        android:id="@+id/spinner_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_bg10"
                android:hint="Zip Code"
                android:inputType="number"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />




            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@drawable/layout_bg"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/vendor_submit"/>





        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>