<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_4sdp"
    android:layout_height="wrap_content"
    tools:context=".complain_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_11sdp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:text="Add screenshot :"/>
        <ImageView
            android:onClick="onClick"
            android:id="@+id/srcschot"
            android:layout_margin="@dimen/_11sdp"
            android:src="@drawable/inventory"
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            />

        <EditText
            android:id="@+id/feed_back"

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/layout_bg2"
            android:gravity="top"
            android:hint="Enter feedback"
            android:lines="6"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:onClick="onClick"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ft_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/layout_bg"
            android:padding="@dimen/_6sdp"
            android:text="    Feedback    "
            android:textColor="@color/colorWhite" />


    </LinearLayout>



</android.support.v7.widget.CardView>