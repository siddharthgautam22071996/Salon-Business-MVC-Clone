<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Custom promotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Create a customized promotion to meet your unique business needs."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/create"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_60sdp"
                    android:src="@mipmap/ic_custom_edit"
                    android:layout_height="@dimen/_60sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/_6sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_14sdp"
                        android:text="Create Promotion"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:paddingLeft="@dimen/_4sdp"
                        android:text="Set up a flexible promotion like Deal of the Day ,Week Day Deal, Coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/tv_po_balance"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:text="Start Date"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Your Pick"
                         />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey"/>


                <RelativeLayout
                    android:padding="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/tv_po_balance"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:text="End Date"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Your Pick"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey"/>


                <RelativeLayout
                    android:padding="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/tv_po_balance"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:text="Discount"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Your Pick"
                        />
                </RelativeLayout>



            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue2"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text=" Set Up Promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/_2sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Ready-Made Promotions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Set up one of our promotion templates to help attract Customers and get more bookings for specific seasons or event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:id="@+id/rv_ani"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</ScrollView>